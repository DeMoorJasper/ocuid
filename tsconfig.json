{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "ESNext",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true
  },

  "exclude": ["node_modules", "dist"]
}
